<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="rankstop.steeringit.com.rankstop">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Activities.SplashScreenActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.ContainerActivity"
            android:label="@string/title_activity_container"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activities.NotificationsActivity"
            android:parentActivityName=".Activities.ContainerActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Activities.ContainerActivity" />
        </activity>
        <activity
            android:name=".Activities.EditProfileActivity"
            android:parentActivityName=".Activities.ContainerActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Activities.ContainerActivity" />
        </activity>
        <activity
            android:name=".Activities.SettingsActivity"
            android:parentActivityName=".Activities.ContainerActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Activities.ContainerActivity" />
        </activity>
        <activity
            android:name=".Activities.ItemOwnedActivity"
            android:parentActivityName=".Activities.ContainerActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Activities.ContainerActivity" />
        </activity>
        <activity
            android:name=".Activities.ItemCreatedActivity"
            android:parentActivityName=".Activities.ContainerActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Activities.ContainerActivity" />
        </activity>
        <activity
            android:name=".Activities.ItemFollowedActivity"
            android:parentActivityName=".Activities.ContainerActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Activities.ContainerActivity" />
        </activity>
        <activity
            android:name=".Activities.ItemDetailsActivity"
            android:label="@string/add_review"
            android:screenOrientation="portrait" />
        <activity android:name=".Activities.AddReviewActivity" />
        <activity android:name=".Activities.AddItemActivity" />
        <activity android:name=".Activities.SearchActivity"></activity>
    </application>

</manifest>