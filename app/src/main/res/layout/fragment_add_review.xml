<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/rs_toolbar"/>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view_eval_criteria"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/m_activity"
                android:layout_marginRight="@dimen/m_activity"
                android:layout_marginBottom="@dimen/m_activity"
                app:contentPadding="@dimen/m_activity">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.github.florent37.expansionpanel.ExpansionHeader
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        app:expansion_headerIndicator="@id/header_indicator_comments"
                        app:expansion_layout="@id/expansion_layout_comments"
                        app:expansion_toggleOnClick="true">

                        <!-- HEADER -->

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/ic_add_black_24dp"
                            android:drawablePadding="5dp"
                            android:fontFamily="@font/montserrat_medium_font"
                            android:text="Add comment"
                            android:textColor="@color/colorPrimary" />

                        <!-- HEADER INDICATOR -->
                        <ImageView
                            android:id="@+id/header_indicator_comments"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|right"
                            android:layout_marginLeft="16dp"
                            android:adjustViewBounds="true"
                            app:srcCompat="@drawable/ic_expansion_header_indicator_grey_24dp" />


                    </com.github.florent37.expansionpanel.ExpansionHeader>

                    <com.github.florent37.expansionpanel.ExpansionLayout
                        android:id="@+id/expansion_layout_comments"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <!-- CONTENT -->

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/input_layout_comment"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp">

                                <android.support.design.widget.TextInputEditText
                                    android:id="@+id/input_comment"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="top"
                                    android:hint="@string/hint_review_comment"
                                    android:inputType="textMultiLine"
                                    android:lines="8"
                                    android:maxLines="10"
                                    android:minLines="6"
                                    android:scrollbars="vertical" />
                            </android.support.design.widget.TextInputLayout>
                        </LinearLayout>

                    </com.github.florent37.expansionpanel.ExpansionLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/m_activity"
                android:layout_marginRight="@dimen/m_activity"
                android:layout_marginBottom="@dimen/m_activity"
                app:contentPadding="@dimen/m_activity"
                app:contentPaddingRight="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.github.florent37.expansionpanel.ExpansionHeader
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="5dp"
                        android:paddingRight="8dp"
                        android:paddingBottom="5dp"
                        app:expansion_headerIndicator="@id/header_indicator_pics"
                        app:expansion_layout="@id/expansion_layout_pics"
                        app:expansion_toggleOnClick="true">

                        <!-- HEADER -->

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/ic_add_black_24dp"
                            android:drawablePadding="5dp"
                            android:fontFamily="@font/montserrat_medium_font"
                            android:text="Add pictures"
                            android:textColor="@color/colorPrimary" />

                        <!-- HEADER INDICATOR -->
                        <ImageView
                            android:id="@+id/header_indicator_pics"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|right"
                            android:layout_marginLeft="16dp"
                            android:adjustViewBounds="true"
                            app:srcCompat="@drawable/ic_expansion_header_indicator_grey_24dp" />


                    </com.github.florent37.expansionpanel.ExpansionHeader>

                    <com.github.florent37.expansionpanel.ExpansionLayout
                        android:id="@+id/expansion_layout_pics"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <!-- CONTENT -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <android.support.design.button.MaterialButton
                                android:id="@+id/btn_take_pic"
                                style="@style/Widget.MaterialComponents.Button.Icon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end"
                                android:text="Take picture"
                                android:textSize="14sp"
                                app:cornerRadius="0dp"
                                app:icon="@drawable/ic_photo_camera" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="10dp"
                                android:minHeight="100dp">

                                <TextView
                                    android:id="@+id/tv_add_pix"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:text="improve your review by adding pictures" />

                                <android.support.v7.widget.RecyclerView
                                    android:id="@+id/recycler_view_pix"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />
                            </RelativeLayout>
                        </LinearLayout>

                    </com.github.florent37.expansionpanel.ExpansionLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.design.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/p_activity"
                android:layout_marginRight="@dimen/p_activity"
                android:layout_marginBottom="@dimen/p_activity"
                android:text="Valider" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>