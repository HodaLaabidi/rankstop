<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/card_view"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/mlr_card_view"
    android:layout_marginRight="@dimen/mlr_card_view"
    android:foreground="?android:selectableItemBackground"
    app:cardElevation="@dimen/elevation">

    <LinearLayout
        android:id="@+id/pix_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/view_note"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/colorGreenPie"/>

        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/pic_review"/>


    </LinearLayout>
</android.support.v7.widget.CardView>