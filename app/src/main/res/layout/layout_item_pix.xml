<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:selectableItemBackground"
    app:cardElevation="@dimen/elevation">

    <LinearLayout
        android:id="@+id/pix_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_header_card">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/avatar"
                android:layout_width="@dimen/with_card_avatar"
                android:layout_height="@dimen/with_card_avatar"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/margin_end_avatar"
                fresco:placeholderImage="@drawable/ava_256"
                fresco:roundAsCircle="true" />

            <rankstop.steeringit.com.rankstop.customviews.RSTVMedium
                android:id="@+id/tv_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/avatar"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/size_large_date" />

            <rankstop.steeringit.com.rankstop.customviews.RSTVMedium
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_username"
                android:layout_toEndOf="@id/avatar"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/size_small_date" />

            <ImageButton
                android:id="@+id/btn_remove_pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/ic_remove"
                android:visibility="gone" />
        </RelativeLayout>

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/pic_review"
            app:placeholderImage="@drawable/no_image_available"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


    </LinearLayout>
</android.support.v7.widget.CardView>