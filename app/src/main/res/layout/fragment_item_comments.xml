<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RadioGroup
        android:id="@+id/filter_toggle"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="@dimen/mlr_card_view"
        android:layout_marginEnd="@dimen/mlr_card_view"
        android:background="@drawable/rs_filter_view_gray"
        android:checkedButton="@id/all_comment"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/all_comment"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/toggle_all_bg"
            android:button="@null"
            android:gravity="center"
            android:padding="2dp"
            android:text="All"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/good_comment"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/toggle_good_bg"
            android:button="@null"
            android:gravity="center"
            android:padding="2dp"
            android:text="Good"
            android:textColor="@color/colorGreenPie"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/neutral_comment"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/toggle_neutral_bg"
            android:button="@null"
            android:gravity="center"
            android:padding="2dp"
            android:text="Neutral"
            android:textColor="@color/colorOrangePie"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/bad_comment"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/toggle_bad_bg"
            android:button="@null"
            android:gravity="center"
            android:padding="2dp"
            android:text="Bad"
            android:textColor="@color/colorRedPie"
            android:textSize="12sp" />
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_my_comments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:minHeight="170dp">

            <TextView
                android:id="@+id/title_my_com"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My comments:"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/m_activity"
                android:layout_marginStart="@dimen/m_activity"
                android:layout_marginBottom="@dimen/m_activity"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view_my_comments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/title_my_com"/>

            <LinearLayout
                android:id="@+id/ll_add_comments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:visibility="gone"
                android:layout_centerInParent="true"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_add_comments"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/add_comments"
                    android:gravity="center"/>

                <android.support.design.button.MaterialButton
                    android:id="@+id/btn_add_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/add_comments"
                    android:textAllCaps="false"/>
            </LinearLayout>

            <ProgressBar
                android:id="@+id/mc_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/title_other_com"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Other comments:"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/m_activity"
                android:layout_marginStart="@dimen/m_activity"
                android:visibility="gone"
                android:layout_marginBottom="@dimen/m_activity"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view_comments"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/title_other_com"/>

            <ProgressBar
                android:id="@+id/main_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
