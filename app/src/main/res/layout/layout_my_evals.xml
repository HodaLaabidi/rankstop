<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/p_card_rv_item"
    android:layout_marginRight="@dimen/p_card_rv_item"
    android:foreground="?android:selectableItemBackground"
    tools:context=".ui.activities.ContainerActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/item_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <rankstop.steeringit.com.rankstop.customviews.RSTVBold
                android:id="@+id/item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/p_card_rv_item"
                android:layout_marginTop="@dimen/p_card_rv_item"
                android:layout_marginEnd="35dp"
                android:layout_marginBottom="@dimen/p_card_rv_item"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/colorTitleText"
                android:textSize="@dimen/text_size_title_item_rv"
                android:transitionName="@string/transition_title" />

            <CheckBox
                android:id="@+id/icon_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_margin="@dimen/p_card_rv_item"
                android:background="@drawable/like_icon"
                android:button="@null"
                android:checked="false"
                android:clickable="true"
                android:focusable="true"
                android:stateListAnimator="@animator/scale" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/item_stat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-8dp"
            android:paddingStart="@dimen/p_card_rv_item"
            android:paddingEnd="@dimen/p_card_rv_item"
            android:layout_below="@id/item_info"
            android:weightSum="2">

            <rankstop.steeringit.com.rankstop.customviews.RSTVMedium
                android:id="@+id/tv_count_reviews"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/colorGray"
                android:textSize="@dimen/text_size_number" />

            <rankstop.steeringit.com.rankstop.customviews.RSTVMedium
                android:id="@+id/tv_count_followers"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="end"
                android:maxLines="1"
                android:textColor="@color/colorGray"
                android:textSize="@dimen/text_size_number" />
        </LinearLayout>

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/pie_chart"
            android:layout_width="@dimen/width_pie_item"
            android:layout_height="@dimen/width_pie_item"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/p_card_rv_item"
            android:layout_marginBottom="@dimen/p_card_rv_item"
            android:layout_below="@id/item_stat"
            android:transitionName="@string/transition_pie" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_stat"
            android:layout_toEndOf="@id/pie_chart"
            android:layout_marginStart="20dp"
            android:layout_marginTop="@dimen/p_card_rv_item"
            android:layout_marginBottom="@dimen/p_card_rv_item"
            android:orientation="vertical"
            android:background="@drawable/bg_layout_my_eval"
            android:paddingStart="10dp"
            android:paddingEnd="0dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <rankstop.steeringit.com.rankstop.customviews.RSTVBold
                    android:id="@+id/tv_note_eval_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Note Eval:"
                    android:layout_marginEnd="5dp"
                    android:textColor="@color/colorTitleText"
                    android:textSize="@dimen/text_size_title_item_rv" />

                <rankstop.steeringit.com.rankstop.customviews.RSTVBold
                    android:id="@+id/tv_note_eval"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:ellipsize="end"
                    android:layout_toEndOf="@id/tv_note_eval_text"
                    android:maxLines="1"
                    android:textColor="@color/colorTitleText"
                    android:textSize="@dimen/text_size_title_item_rv" />

                <rankstop.steeringit.com.rankstop.customviews.RSTVMedium
                    android:id="@+id/tv_date_eval"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/p_card_rv_item"/>

            </RelativeLayout>
            <rankstop.steeringit.com.rankstop.utils.DisabledRecyclerView
                android:id="@+id/recycler_view_criteria_evaluated"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <!--<android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view_criteria_evaluated"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>-->
        </LinearLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>