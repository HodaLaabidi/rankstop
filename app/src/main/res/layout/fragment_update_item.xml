<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include layout="@layout/rs_toolbar"/>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/app_bar">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/m_activity"
                app:contentPadding="@dimen/m_activity">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.github.florent37.expansionpanel.ExpansionHeader
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        app:expansion_headerIndicator="@id/header_indicator_social_networks"
                        app:expansion_layout="@id/expansion_layout_social_networks"
                        app:expansion_toggleOnClick="true">

                        <!-- HEADER -->

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/ic_add_black_24dp"
                            android:drawablePadding="5dp"
                            android:fontFamily="@font/montserrat_medium_font"
                            android:text="RÃ©seaux sociaux"
                            android:textColor="@color/colorPrimary" />

                        <!-- HEADER INDICATOR -->
                        <ImageView
                            android:id="@+id/header_indicator_social_networks"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|right"
                            android:layout_marginLeft="16dp"
                            android:adjustViewBounds="true"
                            app:srcCompat="@drawable/ic_expansion_header_indicator_grey_24dp" />


                    </com.github.florent37.expansionpanel.ExpansionHeader>

                    <com.github.florent37.expansionpanel.ExpansionLayout
                        android:id="@+id/expansion_layout_social_networks"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <!-- CONTENT -->

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/input_layout_facebook"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp">

                                <android.support.design.widget.TextInputEditText
                                    android:id="@+id/input_facebook"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="@string/hint_facebook"
                                    android:inputType="textMultiLine" />
                            </android.support.design.widget.TextInputLayout>

                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/input_layout_instagram"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp">

                                <android.support.design.widget.TextInputEditText
                                    android:id="@+id/input_instagram"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="@string/hint_instagram"
                                    android:inputType="textMultiLine" />
                            </android.support.design.widget.TextInputLayout>

                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/input_layout_twitter"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp">

                                <android.support.design.widget.TextInputEditText
                                    android:id="@+id/input_twitter"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="@string/hint_twitter"
                                    android:inputType="textMultiLine" />
                            </android.support.design.widget.TextInputLayout>

                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/input_layout_google"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp">

                                <android.support.design.widget.TextInputEditText
                                    android:id="@+id/input_google"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="@string/hint_google"
                                    android:inputType="textMultiLine" />
                            </android.support.design.widget.TextInputLayout>

                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/input_layout_linkedin"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp">

                                <android.support.design.widget.TextInputEditText
                                    android:id="@+id/input_linkedin"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="@string/hint_linkedin"
                                    android:inputType="textMultiLine" />
                            </android.support.design.widget.TextInputLayout>
                        </LinearLayout>

                    </com.github.florent37.expansionpanel.ExpansionLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/m_activity"
                android:layout_marginRight="@dimen/m_activity"
                android:layout_marginBottom="@dimen/m_activity"
                app:contentPadding="@dimen/m_activity"
                app:contentPaddingRight="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.github.florent37.expansionpanel.ExpansionHeader
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="5dp"
                        android:paddingRight="8dp"
                        android:paddingBottom="5dp"
                        app:expansion_headerIndicator="@id/header_indicator_gallery"
                        app:expansion_layout="@id/expansion_layout_gallery"
                        app:expansion_toggleOnClick="true">

                        <!-- HEADER -->

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/ic_add_black_24dp"
                            android:drawablePadding="5dp"
                            android:fontFamily="@font/montserrat_medium_font"
                            android:text="@string/gallery"
                            android:textColor="@color/colorPrimary" />

                        <!-- HEADER INDICATOR -->
                        <ImageView
                            android:id="@+id/header_indicator_gallery"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|right"
                            android:layout_marginLeft="16dp"
                            android:adjustViewBounds="true"
                            app:srcCompat="@drawable/ic_expansion_header_indicator_grey_24dp" />


                    </com.github.florent37.expansionpanel.ExpansionHeader>

                    <com.github.florent37.expansionpanel.ExpansionLayout
                        android:id="@+id/expansion_layout_gallery"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <!-- CONTENT -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <android.support.design.button.MaterialButton
                                android:id="@+id/btn_take_pic"
                                style="@style/Widget.MaterialComponents.Button.Icon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end"
                                android:text="@string/take_pix"
                                android:textSize="14sp"
                                app:cornerRadius="0dp"
                                app:icon="@drawable/ic_photo_camera" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="10dp"
                                android:minHeight="100dp">

                                <TextView
                                    android:id="@+id/tv_add_pix"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:visibility="gone"
                                    android:text="@string/add_pix" />

                                <android.support.v7.widget.RecyclerView
                                    android:id="@+id/recycler_view_pix"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />
                            </RelativeLayout>
                        </LinearLayout>

                    </com.github.florent37.expansionpanel.ExpansionLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.design.button.MaterialButton
                android:id="@+id/btn_save_changes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/save_changes"
                android:layout_margin="@dimen/m_activity"
                android:textAllCaps="false"/>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</RelativeLayout>