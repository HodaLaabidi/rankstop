<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/width_item_rv"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:foreground="?android:selectableItemBackground"
    tools:context=".Activities.ContainerActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/p_card_rv_item">

        <TextView
            android:id="@+id/item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:fontFamily="@font/montserrat_semi_bold_font"
            android:textColor="@color/colorTitleText"
            android:transitionName="@string/transition_title"
            android:textSize="@dimen/text_size_title_item_rv"/>

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/pie_chart"
            android:layout_width="@dimen/width_pie_item"
            android:layout_height="@dimen/width_pie_item"
            android:layout_marginTop="@dimen/p_card_rv_item"
            android:transitionName="@string/transition_pie"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>
</android.support.v7.widget.CardView>