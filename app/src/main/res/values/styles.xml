<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />
    <!-- ***************************splash screen style*************************** -->
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen_bg</item>
    </style>
    <!-- *******************************dark toolbar****************************** -->
    <style name="ItemDetailsDarkToolbar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColorSecondary">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="actionMenuTextColor">@color/colorPrimary</item>
    </style>
    <!-- ******************************light toolbar******************************* -->
    <style name="ItemDetailsLightToolbar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>
    <!-- *************************fonts style***************************** -->
    <style name="montserrat" parent="@android:style/TextAppearance.Small">
        <item name="android:fontFamily">@font/montserrat_font</item>
    </style>

    <style name="montserrat_bold" parent="@android:style/TextAppearance.Small">
        <item name="android:fontFamily">@font/montserrat_bold_font</item>
    </style>

    <style name="montserrat_semi_bold" parent="@android:style/TextAppearance.Small">
        <item name="android:fontFamily">@font/montserrat_semi_bold_font</item>
    </style>

    <style name="montserrat_medium" parent="@android:style/TextAppearance.Small">
        <item name="android:fontFamily">@font/montserrat_medium_font</item>
    </style>

    <style name="montserrat_black" parent="@android:style/TextAppearance.Small">
        <item name="android:fontFamily">@font/montserrat_black_font</item>
    </style>

    <style name="montserrat_light" parent="@android:style/TextAppearance.Small">
        <item name="android:fontFamily">@font/montserrat_light_font</item>
    </style>

    <style name="montserrat_thin" parent="@android:style/TextAppearance.Small">
        <item name="android:fontFamily">@font/montserrat_thin_font</item>
    </style>

    <style name="MySeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressBackgroundTint">#f4511e</item>
        <item name="android:progressTint">#388e3c</item>
        <item name="android:colorControlActivated">#c51162</item>
    </style>

    <style name="FullScreenDialogStyle" parent="Theme.MaterialComponents.Light.DialogWhenLarge">
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Set this to true if you want Full Screen without status bar -->
        <item name="android:windowFullscreen">false</item>

        <item name="android:windowIsFloating">false</item>

        <!-- This is important! Don't forget to set window background -->
        <item name="android:windowBackground">@color/colorWhite</item>

        <!-- Additionally if you want animations when dialog opening-->
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_bottom_sheet_dialog_fragment</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog" />

    <!-- ****************** style of edit text ****************** -->
    <style name="counterText">
        <item name="android:textColor">#aa344955</item>
    </style>

    <style name="counterOverride">
        <item name="android:textColor">@color/colorRed</item>
    </style>

</resources>
