<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:toolbarId="@id/toolbar">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:titleEnabled="false">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fitsSystemWindows="true"
                android:paddingStart="@dimen/pl_pie_details"
                android:paddingTop="@dimen/pt_pie_details"
                android:paddingEnd="@dimen/pr_pie_details"
                android:paddingBottom="@dimen/pb_pie_details"
                android:scaleType="centerCrop"
                app:layout_collapseMode="parallax">

                <ProgressBar
                    android:id="@+id/progress_bar"
                    android:layout_width="@dimen/progress_bar_width"
                    android:layout_height="@dimen/progress_bar_width"
                    android:layout_centerInParent="true"
                    android:visibility="gone"/>

                <RelativeLayout
                    android:id="@+id/header_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="invisible">
                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/pie_chart"
                        android:layout_width="@dimen/width_pie_details"
                        android:layout_height="@dimen/width_pie_details"
                        android:transitionName="@string/transition_pie" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_left_details"
                        android:layout_toEndOf="@id/pie_chart"
                        android:orientation="vertical">

                        <rankstop.steeringit.com.rankstop.customviews.RSTVBold
                            android:id="@+id/tv_item_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/text_size_title_item_details"
                            android:transitionName="@string/transition_title" />

                        <rankstop.steeringit.com.rankstop.customviews.RSTVBold
                            android:id="@+id/tv_ownership"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/mb_text_category"
                            android:textColor="@color/colorGreenPie"
                            android:textSize="@dimen/text_size_category_item_details" />

                        <rankstop.steeringit.com.rankstop.customviews.RSTVBold
                            android:id="@+id/tv_item_category"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/mb_text_category"
                            android:textColor="@color/colorGray"
                            android:textSize="@dimen/text_size_category_item_details" />

                        <rankstop.steeringit.com.rankstop.customviews.RSTVMedium
                            android:id="@+id/tv_item_description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorPrimary"
                            android:maxLines="3"
                            android:ellipsize="end"
                            android:textSize="@dimen/text_size_subtitle_item_details" />

                        <rankstop.steeringit.com.rankstop.customviews.RSTVMedium
                            android:id="@+id/tv_about_item"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/mb_text_category"
                            android:textColor="@color/colorGray"
                            android:text="@string/about_item"
                            android:gravity="center_vertical"
                            android:drawablePadding="@dimen/p_ic_tv"
                            android:textSize="@dimen/text_size_category_item_details"
                            android:drawableStart="@drawable/ic_info_outline_gray"/>

                        <LinearLayout
                            android:weightSum="2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <rankstop.steeringit.com.rankstop.customviews.RSBTNMedium
                                android:id="@+id/btn_add_pix"
                                android:visibility="gone"
                                style="@style/Widget.MaterialComponents.Button"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/mt_btn_item_details"
                                android:text="@string/update_item"
                                android:textAllCaps="false"
                                android:layout_marginRight="5dp"
                                android:textSize="@dimen/size_btn_edit"
                                />

                            <rankstop.steeringit.com.rankstop.customviews.RSBTNMedium
                                android:id="@+id/btn_add_review"
                                style="@style/Widget.MaterialComponents.Button"
                                android:layout_weight="1"
                                android:layout_marginLeft="5dp"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/mt_btn_item_details"
                                android:textSize="@dimen/size_btn_edit"
                                android:text="@string/add_review"
                                android:visibility="visible"
                                android:textAllCaps="false" />
                        </LinearLayout>
                        <rankstop.steeringit.com.rankstop.customviews.RSBTNMedium
                            android:id="@+id/btn_report_abuse"
                            style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/mt_btn_item_details"
                            android:text="@string/report_abuse"
                            android:textAllCaps="false"
                            android:textSize="@dimen/size_btn_edit"
                            app:icon="@drawable/ic_flag" />


                    </LinearLayout>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_view_gallery"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/pie_chart"
                        android:layout_marginTop="@dimen/mt_rv_details"
                        android:visibility="gone" />
                </RelativeLayout>
            </RelativeLayout>

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:theme="@style/ItemDetailsDarkToolbar"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:title="sa" />

        </com.google.android.material.appbar.CollapsingToolbarLayout>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabs"
            style="@style/Widget.MaterialComponents.TabLayout.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorPrimary"
            app:layout_collapseMode="pin"
            app:tabBackground="@color/colorPrimary"
            app:tabGravity="fill" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>
